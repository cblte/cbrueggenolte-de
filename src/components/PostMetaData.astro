---
import { formatDate } from '@utils/utils';

const { post } = Astro.props;
---

<div class="flex text-md text-stone-500">
  <div class="">
    {formatDate(post.data.pubDate)}
  </div>
  &mdash;
  <div class="inline">
    Tags: {' '}
    <div
      class="inline"
      set:html={post.data.tags?.length > 0
        ? post.data.tags.map((tag: string) => `<a href="/tags/${tag}/">${tag}</a>`).join(', ')
        : 'No tags'}
    />
  </div>
</div>
