---
/**
 * This script ensures the page loads with consistent styling
 * during client-side navigation in an Astro application.
 */
---

<script is:inline>
  // No theme switching needed - always use dark theme
  const setTheme = () => {
    // Always ensure we're in "dark" mode (though we removed the toggle)
    document.documentElement.classList.remove('dark');
  };

  setTheme();

  document.addEventListener('astro:after-swap', setTheme);
</script>
