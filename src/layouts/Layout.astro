---
import '@fontsource/roboto-mono/400.css';
import '@fontsource/roboto-mono/600.css';

import '../styles/global.css';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import { ClientRouter } from 'astro:transitions';

import { createSlug } from '@utils/utils';

const { title, postdata } = Astro.props;

// Site configuration
const SITE_URL = 'https://cbrueggenolte.de';
const SITE_TITLE = 'cbrueggenolte.de';
const SITE_DESCRIPTION =
  'Persönliche Website von Carsten Brüggenolte - Gedanken, Erfahrungen und digitale Entdeckungen';

// Generate proper canonical URL
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, SITE_URL).href;

// Generate page title
const pageTitle = title ? `${title} | ${SITE_TITLE}` : SITE_TITLE;

// Meta description priority: postdata.description > page-specific > default
const metaDescription = postdata?.description || SITE_DESCRIPTION;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:site_name" content={SITE_TITLE} />
    <meta property="og:locale" content="de_DE" />
    {postdata?.cover && <meta property="og:image" content={new URL(postdata.cover, SITE_URL).href} />}

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={metaDescription} />
    {postdata?.cover && <meta property="twitter:image" content={new URL(postdata.cover, SITE_URL).href} />}

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <ClientRouter />
  </head>
  <body class="mx-auto max-w-3xl">
    <!-- Skip to content link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:top-4 focus:left-4 focus:z-50 focus:absolute focus:bg-sky-600 focus:shadow-lg focus:px-4 focus:py-2 focus:rounded focus:outline-none focus:ring-2 focus:ring-sky-400 focus:text-white">
      Skip to main content
    </a>
    <div id="top"></div>

    <Header />
    <main id="main-content" class="mx-auto my-8 px-4 pt-4 pb-12 rounded-lg container">
      <slot />
    </main>

    <Footer />
    <script src="/scripts/disablejs.js" defer></script>
    <div id="disablejs" onclick="closeDisablejsInfo()"></div>
    <script>
      document.addEventListener('DOMContentLoaded', function (event) {
        favicons();
      });
    </script>
  </body>
</html>

<style is:global>
  main a {
    color: var(--color-sky-600); /* sky-600 for links */
    text-decoration: none;
    font-weight: var(--font-weight-normal);
    transition:
      color 300ms ease,
      text-decoration 300ms ease;
  }

  main a:hover {
    color: var(--color-sky-700); /* sky-700 on hover */
    background-color: transparent;
    text-decoration: underline;
  }

  /* Focus styles for accessibility */
  main a:focus {
    outline: 2px solid var(--color-sky-500);
    outline-offset: 2px;
    border-radius: 2px;
  }

  #disablejs {
    -moz-overflow-scrolling: touch;
    -ms-overflow-scrolling: touch;
    -webkit-overflow-scrolling: touch;
    background-color: rgba(0, 0, 0, 0.8);
    bottom: 0;
    color: white;
    cursor: pointer;
    display: none;
    font-size: 0.75em;
    height: 100%;
    left: 0;
    overflow-x: hidden;
    overflow-y: scroll;
    padding: 1em;
    position: fixed;
    right: 0;
    top: 0;
    width: 100%;
    z-index: 1000;
  }

  #disablejs a {
    text-decoration: underline;
  }

  #disablejs a:hover {
    background-color: whitesmoke;
    color: black;
  }

  #disablejs p {
    margin: 2em auto;
    font-size: 1.2em;
    line-height: 1.5em;
  }

  #disablejs strong {
    background-color: white;
    color: black;
  }
</style>
